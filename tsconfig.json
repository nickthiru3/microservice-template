{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["es2022"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#config/*": ["./config/*"],
      "#src/*": ["./src/*"],
      "#lib/*": ["./lib/*"],
      "#utils/*": ["./utils/*"],
      "#test/*": ["./test/*"],
      "#package-lock": ["./package-lock.json"]
    }
  },
  "include": ["src/**/*", "lib/**/*", "bin/**/*", "config/**/*"],
  "exclude": [
    "node_modules",
    "cdk.out",
    "lib/pipeline/**/*",
    "lib/cicd-stack.ts"
  ]
}
