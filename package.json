{
  "name": "super-deals-deals-ms",
  "version": "0.1.0",
  "bin": {
    "super-deals-deals-ms": "bin/super-deals-deals-ms.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "prepare": "is-ci || husky install",
    "cdk": "cdk",
    "env:dev": "cp .env.example .env",
    "dev": "ts-node --transpile-only bin/super-deals-deals-ms.ts",
    "deploy": "npx cdk deploy --all --outputs-file outputs.json",
    "local:deploy": "cdk deploy --app 'npx ts-node --prefer-ts-exts bin/super-deals-deals-ms.ts' --require-approval never",
    "deploy:staging": "cdk deploy --context env=staging --require-approval never",
    "deploy:prod": "cdk deploy --context env=prod --require-approval never",
    "deploy:ci": "cdk deploy --require-approval never",
    "diff:staging": "cdk diff --context env=staging",
    "diff:prod": "cdk diff --context env=prod",
    "synth:staging": "cdk synth --context env=staging",
    "synth:prod": "cdk synth --context env=prod"
  },
  "imports": {
    "#config/*": [
      "./config/*"
    ],
    "#src/*": [
      "./src/*"
    ],
    "#lib/*": [
      "./lib/*"
    ],
    "#test/*": [
      "./test/*"
    ],
    "#types/*": [
      "./types/*"
    ],
    "#package-lock": [
      "./package-lock.json"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-cdk": "2.1021.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "husky": "^8.0.0",
    "is-ci": "^4.1.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "aws-cdk-lib": "2.205.0",
    "constructs": "^10.0.0",
    "dotenv": "^17.2.0"
  }
}
